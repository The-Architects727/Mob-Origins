{
    "name": "Friends in the Valley",
	"description": "Many Nether mobs are nuetral toward you.",
    "type": "origins:multiple",
    "hidden": false,
    "friendermen_join_team": {
        "type": "origins:action_on_callback",
        "execute_chosen_when_orb": true,
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "team leave @s"
        },
        "entity_action_added": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "team add ghast"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join ghast @s"
                }
            ]
        }
    }
}
