{
    "name": "Supercharged flight",
    "description": "You can press your [Primary] to enter your charged mode, and begin to fly.",
    "type": "origins:multiple",
    "bar": {
        "hidden": true,
        "type": "origins:resource",
        "min": 0,
        "max": 150,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 15
        }
    },
    "boolean": {
        "hidden": true,
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "activate": {
        "hidden": true,
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.primary_active"
        },
        "cooldown": 400,
        "entity_action": {
            "type": "origins:change_resource",
            "resource":"*:*_boolean",
            "operation": "set",
            "change": 1
        },
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 7
        }
    },
    "deactivate": {
        "hidden": true,
        "type": "origins:action_over_time",
        "interval": 5,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_bar",
            "comparison": "<=",
            "compare_to": 0
        },
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource":"*:*_boolean",
                    "operation": "set",
                    "change": 0
                },
                {
                    "type": "origins:change_resource",
                    "resource":"*:*_bar",
                    "operation": "set",
                    "change": 150
                }
            ]
        }
    },
    "drain": {
        "hidden": true,
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_boolean",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_bar",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource":"*:*_bar",
            "operation": "add",
            "change": -1
        }
    },
    "float": {
        "hidden": true,
        "type": "origins:action_over_time",
        "interval": 5,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_boolean",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_bar",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "origins:apply_effect",
            "effect": {
                "show_particles": false,
                "effect": "minecraft:levitation",
                "show_icon": false,
                "amplifier": 0,
                "duration": 100
            }
        },
        "falling_action": {
            "type": "origins:clear_effect",
            "effect": "minecraft:levitation"
        }
    },
    "fire": {
        "hidden": true,
        "type": "origins:action_over_time",
        "interval": 5,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_boolean",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_bar",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "origins:set_on_fire",
            "duration": 100
        },
        "falling_action": {
            "type": "origins:extinguish"
        }

    },
    "speed": {
        "type": "origins:modify_air_speed",
        "modifier": {
            "operation": "multiply_total",
            "value": 0.5
        }
    }
    
}