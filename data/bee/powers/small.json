{
    "name": "Bee sized",
	"description": "You are slightly smaller than a block.",
    "type": "origins:multiple",
    "hidden": false,
    "friendermen_join_team": {
        "type": "origins:action_on_callback",
        "execute_chosen_when_orb": true,
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "scale reset"
        },
        "entity_action_added": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "scale set pehkui:height .33"
                },
                {
                    "type": "origins:execute_command",
                    "command": "scale set pehkui:width 1.1"
                }
            ]
        }
    }
}
